{
	"ecmaFeatures": {
		"arrowFunctions": true,
		"modules": true
	},
    "parserOptions": {
        "sourceType": "script"
    },
	"env": {
		"node": true,
		"es6": true
	},
	"extends": "eslint:recommended",
    "rules": {
        "semi": ["ERROR", "always"],
        "quotes": ["ERROR", "double"],
        "indent": ["ERROR", 4]
    }
}
